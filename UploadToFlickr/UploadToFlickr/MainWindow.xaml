<Window x:Class="UploadToFlickr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="650" Width="825">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="250*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Click="Button_Click">Auth</Button>
        <TextBox x:Name="tbVerifier" Height="30" Grid.Row="1" Margin="0,6,0,5"/>
        <Button Grid.Row="2" Click="Button_Click_1">Continue</Button>
        <Button Grid.Row="3" Click="Button_Click_2">Previous Auth</Button>
        <Button Grid.Row="4" Click="Button_Click_3">Upload c:\temp\photo.jpg</Button>
        <Button Grid.Row="5" Click="Button_Click_4" >Download</Button>
        <Button Grid.Row="6" Click="Button_Click_5">Download</Button>
        <Image x:Name="image" Stretch="None" Grid.Row="7"/>



    </Grid>
</Window>
